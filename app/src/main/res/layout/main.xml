<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".main">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/horizontal"
        android:id="@+id/arrow_width" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:src="@drawable/vertical"
        android:id="@+id/arrow_height"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="width"
        android:id="@+id/width"
        android:layout_below="@+id/arrow_width"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="height"
        android:id="@+id/height"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/arrow_height" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modelo"
        android:id="@+id/model"
        android:layout_below="@+id/width"
        android:layout_toRightOf="@+id/height"
        android:layout_marginTop="48dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ResoluciÃ³n"
        android:id="@+id/resolution"
        android:layout_below="@+id/model"
        android:layout_alignLeft="@+id/model"
        android:layout_alignStart="@+id/model" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Densidad"
        android:id="@+id/density"
        android:layout_below="@+id/resolution"
        android:layout_alignLeft="@+id/resolution"
        android:layout_alignStart="@+id/resolution" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="type"
        android:id="@+id/type"
        android:layout_below="@+id/density"
        android:layout_toRightOf="@+id/height" />


</RelativeLayout>
